// 53. Count sum of digits in a number
#include<stdio.h>

int main(){
    int n,temp,digit,sum=0;
    printf("enter a number which u want to Count sum of digits in a number");
    scanf("%d",&n);
    temp=n;
    while(temp>0){
   digit=temp%10;
   sum=sum+digit;
   temp=temp/10;}
   printf("%d",sum);
  return 0;
}
